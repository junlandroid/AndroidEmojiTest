<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.ll.emoticon">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/XEmoticonsKeyboardTheme">
        <activity
            android:name="github.ll.emoticon.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="github.ll.emoticon.activity.SimpleCommentActivity"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle" />
        <activity
            android:name="github.ll.emoticon.activity.SimpleChatActivity"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle" />
        <activity
            android:name="github.ll.emoticon.activity.PackUpdateChatActivity" />
        <activity
            android:name="github.ll.emoticon.activity.SimpleTranslucentChatActivity"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle" />
        <activity
            android:name="github.ll.emoticon.activity.SimpleChatCoordinatorLayoutActivity"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle" />
        <activity
            android:name="github.ll.emoticon.userdef.SimpleChatUserDefActivity"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle" />
        <activity
            android:name="github.ll.emoticon.qq.QqActivity"
            android:theme="@style/XEmoticonsKeyboardTheme.NoTitle" />
    </application>

</manifest>
